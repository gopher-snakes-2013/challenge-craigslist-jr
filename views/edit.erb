<h2>Edit your item:</h2>

<form action="/edit_post/<%= @item_to_edit.id %>" method="POST" role="form">
  <input type="text" name="title" placeholder="Edit listing" value="<%= @item_to_edit.title %>">
  <input type="text" name="description" placeholder="Edit description" value="<%= @item_to_edit.description %>">
  <input type="text" name="price" placeholder="Edit price" value="<%= @item_to_edit.price %>">
  <input type="submit">
</form>
