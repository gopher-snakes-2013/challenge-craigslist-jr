<h1>Your Post:</h1>
<ul>
	<li>Title: <%= @posting.title %></li>
	<li>Price: $<%= @posting.price %></li>
	<li>Description: <%= @posting.description %></li>
</ul>

<hr>
<a href="/posts/<%= @posting.id %>/<%= @posting.edit_url %>">Please use this link to edit your posting</a>
<h2>Edit Your Posting:</h2>

<form method="post" action="/posts/update/<%= @posting.id %>">
	<label>Title: <input type="text" name="title" value="<%= @posting.title %>"></label><br/>
	<label>Price: $<input type="text" name="price" value="<%= @posting.price %>"></label><br/>
	<label>Description <textarea rows="4" cols="50" name="description"><%= @posting.description %></textarea></label><br/>
	<input type="submit" value="Update Listing">
</form>

<a href="/">Return to Craigslist Jr.</a>
