<h3>Edit Your Listing</h3>
<form method="post" action="/item/update/<%= @item.url %>">
  <label for="item_title">Title</label>
    <input type="text" id="item_title" name="title" value="<%= @item.title %>">

  <label for="item_price">Price</label>
    <input type="text" id="item_price" name="price" value="<%= @item.price %>">

  <br><br>

  <label for="item_desc">Description</label><br>
    <textarea rows="5" cols="100%" name="desc"><%= @item.description %></textarea><br>

  <input type="submit" value="Update Listing">
</form>