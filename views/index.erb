<div class="header">
  <h1>Craigslist III</h1>
</div>
<div class="login">
  <br/></br>
  <% if @user %>
    Welcome <%= @user.name %>
    <br/>
    <a href="/users/<%= @user.id %>">Your Items</a> |
    <a href="/logout">Log Out</a>

  <%else%>
    <a href="/login">Log In</a> |
    <a href="/register">Create an account</a>
  <%end%>
</div>
<div class="create_posts"
  <span class="section_heading"><h2>Create a Post</h2>
  <%= flash[:error] %>
  <form action="/" method="post">
      <input type="text" name="title" placeholder="Title"><br/>
      <input type="text" name="price" placeholder="Price"><br/>
      <textarea rows="10" col="100" name="description" placeholder="Description"></textarea>
      <br/>
      <input type="submit" value="Create Post">
  </form>
</div>
<div class="items_posted"
  <span class="section_heading"><h2>Items For Sale</h2>
    <ul>
    <% @items.each do |item| %>
      <li>
        <a href="/posts/<%= item.id %>"><%= item.title %>  </a>
      </li>
    <%end%>
    </ul>
</div>